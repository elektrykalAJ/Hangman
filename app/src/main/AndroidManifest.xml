<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.school.ee.games.hangman">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TitleActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LobbyActivity"
            android:label="@string/title_activity_lobby"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GameRoomActivity"
            android:label="@string/title_activity_game_room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FriendListActivity"
            android:label="@string/title_activity_friend_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GamePlayActivity"
            android:label="@string/title_activity_game_play"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PickImageActivity" />

        <service
            android:name=".DbService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".GooglePlayGamesSignIn" />
        <activity
            android:name=".UsernameActivity"
            android:label="@string/title_activity_username"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>