<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.school.ee.games.hangman.GameRoomActivity"
    tools:showIn="@layout/activity_game_room"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTitleJoinGame"
        android:text="@string/tvTitleJoinGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

         />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Game 1"
                android:id="@+id/bRandGame1"
                android:background="@drawable/buttons" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Game 2"
                android:id="@+id/bRandGame2"
                android:background="@drawable/buttons" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Game 3"
                android:id="@+id/bRandGame3"
                android:background="@drawable/buttons" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <ListView
                android:id="@+id/lvGameRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
